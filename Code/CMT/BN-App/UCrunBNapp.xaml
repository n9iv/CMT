<UserControl x:Class="CMT.BN_App.UCrunBNapp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
                  d:DesignHeight="800" d:DesignWidth="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Height="1500">
            <TextBlock FontSize="35" Margin ="10" HorizontalAlignment="Center">BN-APP<LineBreak/><LineBreak/><LineBreak/></TextBlock>
            <TextBlock FontSize="20" HorizontalAlignment="Center">Press the follow button to run BN-APP<LineBreak/></TextBlock>
            <Button Name="_btnRun" FontSize="30" Height="60" Width="250" Click="_btnRun_Click" >BN-APP</Button>
            <TextBlock Name="_tbConf" HorizontalAlignment="Center" TextAlignment="Center" Margin="40" FontSize="30" Height="60" Width="350"></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>

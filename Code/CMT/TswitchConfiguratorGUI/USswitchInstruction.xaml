<UserControl x:Class="CMT.TswitchConfiguratorGUI.USswitchInstruction"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="1500" d:DesignWidth="1700" Loaded="UserControl_Loaded">
    <Grid>
        <StackPanel Width="1500" Margin="100,0" Grid.RowSpan="2">
            <TextBlock FontSize="40" Margin="10" HorizontalAlignment="Center" >Switch Configuration Instructions<LineBreak/></TextBlock>
            <TextBlock Margin="40,0,0,20" HorizontalAlignment="left" Grid.Row="0" FontSize="20">Follow the instructions:</TextBlock>
            <WebBrowser ScrollViewer.VerticalScrollBarVisibility="Auto" Name="_wbInstruction" HorizontalAlignment="Center" Grid.Column="1" Grid.ColumnSpan="2" Width="1200" Height="400"/>
        </StackPanel>
    </Grid>
</UserControl>
